{
  "name": "Atlassian",
  "type": "mcp-server",
  "url": "https://mcp.atlassian.com/v1/mcp",
  "env": {
    "ATLASSIAN_CLOUD_ID": "${ATLASSIAN_CLOUD_ID}",
    "ATLASSIAN_EMAIL": "${ATLASSIAN_EMAIL}"
  },
  "description": "Jira integration for issue management and updates",
  "capabilities": [
    "search-issues",
    "get-issue",
    "update-issue",
    "create-issue",
    "add-comment",
    "transition-issue",
    "jql-search"
  ],
  "setup": {
    "requiredEnvVars": [
      "ATLASSIAN_CLOUD_ID",
      "ATLASSIAN_EMAIL"
    ],
    "authentication": "OAuth via Atlassian Cloud",
    "documentation": "https://mcp.atlassian.com/docs"
  },
  "useCases": [
    "Search for in-progress stories",
    "Update Jira issue descriptions",
    "Add comments to issues",
    "Create follow-up tasks",
    "Transition issue status"
  ]
}
